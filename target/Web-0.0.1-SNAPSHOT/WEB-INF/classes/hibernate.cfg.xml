<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 4.1//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-4.1.dtd">
<hibernate-configuration>                                                                                   
  <session-factory>
    <property name="connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="connection.url">jdbc:oracle:thin:@localhost:1521:shop</property>
    <property name="connection.username">dip</property>
    <property name="connection.password">system</property>
    <property name="dialect">org.hibernate.dialect.Oracle8iDialect</property>
     
    <property name="show_sql">true</property>
    <property name="hbm2ddl.auto">create</property>
  
    <mapping class="com.modal.Students"   />
     <mapping class="com.modal.Prizes"   />
      
  </session-factory>
</hibernate-configuration>